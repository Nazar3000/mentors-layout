extends ../default.pug
block pageContent
	include ../templates/header-green
	.container.background-dating-relative
		div.background-dating
		.row
			.col-md-2
			.col-md-8
				h2.title-dating  Давай знайомитися!
				div.form-dating-subtitle-input Оберіть свій Центр із списку:
				form.form-dating(action="POST" placeholder="s")
					div.form-dating-wrapper-input
						input.form-dating-input(type="text" placeholder="Почніть вводити назву Центру починаючи з міста") 
					div.form-dating-wrapper-link
